{
  "compilerOptions": {
    "alwaysStrict": true,
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es2017"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/*"
      ],
      "pages": [
        "src/pages"
      ],
      "tests": ["__tests__/*"]
    },
    "typeRoots": [
      "./type",
      "./node_modules/@types/"
    ],
    "types": [
      "webpack-env",
      "node",
      "jest",
      "cypress",
      "@testing-library/jest-dom"
    ]
  },
  "plugins": [
    {
      "name": "typescript-tslint-plugin"
    }
  ],
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
